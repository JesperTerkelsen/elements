{
  "name": "tradeshift-elements",
  "scripts": {
    "prelint": "cross-env-shell prettier --write --config `pwd`/.prettierrc \"packages/**/src/**/*.{js,json,css,html}\"",
    "lint": "cross-env-shell eslint --config `pwd`/.eslintrc --color \"packages/**/src/**/*.js\"",
    "clean": "cross-env-shell lerna exec -- rm ./lib/*",
    "build": "cross-env-shell lerna exec -- rollup -c=`pwd`/rollup.config.js",
    "watch": "cross-env-shell lerna exec --parallel -- rollup -w -c=`pwd`/rollup.config.js",
    "server": "npx @commonshost/server start --watch",
    "start": "run-p watch server",
    "storybook": "start-storybook -p 9009",
    "happo": "happo"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/runtime": "^7.2.0",
    "@storybook/addon-knobs": "^4.1.9",
    "@storybook/addons": "^4.1.11",
    "@storybook/html": "^4.1.11",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "babel-loader": "^8.0.5",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "eslint": "5.4.0",
    "eslint-config-tradeshift": "6.0.1",
    "happo-plugin-storybook": "2.1.0-rc.1",
    "happo.io": "^3.7.2",
    "lerna": "^3.10.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.8",
    "postcss-preset-env": "^6.5.0",
    "prettier": "1.16.1",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.2.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^1.6.3"
  },
  "dependencies": {
    "@tradeshift/elements": "file:packages/core",
    "@tradeshift/elements.button": "file:packages/components/button",
    "@tradeshift/elements.button-group": "file:packages/components/button-group",
    "@tradeshift/elements.example": "file:packages/components/example",
    "@tradeshift/elements.root": "file:packages/components/root"
  },
  "repository": "github:Tradeshift/elements.git",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/Tradeshift/elements/issues"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "keywords": [
    "ui",
    "components",
    "tradeshift",
    "reusable",
    "webcomponents",
    "client-side",
    "javascript",
    "css",
    "customelements",
    "shadowdom"
  ]
}
